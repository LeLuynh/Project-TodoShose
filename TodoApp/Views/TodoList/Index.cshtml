
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<TodoApp.Models.TodoModel>
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/home.css" />
    </head>
<h1>Product</h1>
<div class="col-3" style="margin: 2rem 0;">
    <a class="btn btn-info form-control text-white" asp-area="" asp-controller="TodoList" asp-action="CreateTodo">Create New Shose</a>
</div>
<div class="col-12 border p-3 mt-3">
    <div class="container text-center home">
        <div class="row">
            @{
                if (Model.Count() > 0)
                {
                    foreach (var todo in Model)
                    {
                        <div class="col-md-3 short">
                            <img class="img-short" src="https://salt.tikicdn.com/ts/tmp/11/14/45/0741d29c891ce0fdc8fadb2006688fbf.jpg" />
                            <div class="short-view">
                                <h3>@todo.Name</h3>
                                <p>@todo.Description</p>
                            </div>
                            <div>
                                <a class="btn btn-success btn-sm text-white" asp-action="EditTodo" asp-controller="TodoList" asp-route-id="@todo.Id">Edit</a>
                                <a onclick="return confirm('Are you sure you want to delete????')" class="btn btn-danger btn-sm text-white" 
                                       asp-action="Delete" asp-route-id="@todo.Id" >Delete</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Error!!!</p>
                }
            }

        </div>
    </div>
 </div>

